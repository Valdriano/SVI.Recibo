@model IEnumerable<SVI.Recibo.Web.ViewModels.ReciboViewModel>

@{
    ViewBag.Title = "Início";
}

<h2>Recibos</h2>

<p>
    @Html.ActionLink( "Criar um novo", "Create" )
</p>
@using( Html.BeginForm( "Visualizar", "Recibo", FormMethod.Post, new { @target = "_blank" } ) )
{
    <table id="tabela" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Selecione
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.IdFornecedor )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.Valor )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.Referencia )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.Data )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.IdEstado )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.IdMunicipio )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.QuantidadeImpressao )
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach( var item in Model )
            {
                <tr>
                    <td>
                        <input type="checkbox" id="@string.Format("IdRecibo{0}",item.Id)" name="@string.Format("IdRecibo{0}",item.Id)" />
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.Fornecedor.Nome )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.Valor )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.Referencia )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.Data )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.Estado.Descricao )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.Municipio.Descricao )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.QuantidadeImpressao )
                    </td>
                    <td>
                        @*@Html.ActionLink("Editar", "Edit", new { id=item.Id }) |*@
                        @*@Html.ActionLink("Visualizar", "Details", new { id=item.Id }) |*@
                        @*@Html.ActionLink( "Excluir", "Delete", new { id = item.Id } )*@
                        @Html.ActionLink( "Visualizar", "Visualizar", new { id = item.Id }, new { @target = "_blank" } )
                    </td>
                </tr>
            }

        </tbody>
        <tfoot></tfoot>

    </table>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Imprmir</button>
        </div>
    </div>

}

